@model EnterprisePageDetailsViewModel;

@{
    ViewData["Title"] = "Detalhes da Empresa - Serviço de estoque e vendas";
}

<h1>Detalhes da Empresa</h1>

<section class="page-content">
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Nome
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Enterprise.Name)
            </dd>
            <dt class="col-sm-2">
                E-mail
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Enterprise.Email)
            </dd>
            <dt class="col-sm-2">
                Telefone
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Enterprise.PhoneNumber)
            </dd>
            <dt class="col-sm-2">
                Senha
            </dt>
            <dd class="col-sm-10">
                ******
            </dd>
            <dt class="col-sm-2">
                Data criação
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Enterprise.CreatedAt)
            </dd>
        </dl>
    </div>
    <hr />
    <div>
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Enterprise.Id">Editar</a>
        <a class="btn btn-secondary" asp-action="Index">Voltar para lista</a>
    </div>
</section>

<section class="activity-history">
    <partial model="Model.ActivityHistory" name="../ActivityHistory/_ActivityHistoryDetails.cshtml" />
</section>