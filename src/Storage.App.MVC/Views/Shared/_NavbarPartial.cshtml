@using Microsoft.AspNetCore.Identity
@using Storage.App.MVC.Core.Enterprise

@inject SignInManager<EnterpriseEntity> SignInManager

<ul class="navbar-nav flex-grow-1">
    @if (SignInManager.IsSignedIn(User))
    {
        <li supress-by-claim-name="UserType" supress-by-claim-value="Enterprise" class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Products" asp-action="Index">Produtos</a>
        </li>
        <li supress-by-claim-name="UserType" supress-by-claim-value="Enterprise" class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Customers" asp-action="Index">Clientes</a>
        </li>
        <li supress-by-claim-name="UserType" supress-by-claim-value="Enterprise" class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Sales" asp-action="Index">Vendas</a>
        </li>
        <li supress-by-claim-name="UserType" supress-by-claim-value="Admin" class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Enterprises" asp-action="Index">Empresas</a>
        </li>
    }
</ul>