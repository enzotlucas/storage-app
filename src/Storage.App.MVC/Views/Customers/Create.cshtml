@model Storage.App.MVC.Core.Customer.CustomerEntity

@{
    ViewData["Title"] = "Cadastrar novo Cliente - Serviço de estoque e vendas";
}

<h1>Cadastrar novo Cliente</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label">Nome</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label">Sobrenome</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">E-mail</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label">Telefone</label>  
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EnterpriseId" class="control-label">Empresa</label>
                <select asp-for="EnterpriseId" class ="form-control" asp-items="ViewBag.EnterpriseId"></select>
            </div>
            <hr />
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-success" />
                <a class="btn btn-secondary" asp-action="Index">Voltar para lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
